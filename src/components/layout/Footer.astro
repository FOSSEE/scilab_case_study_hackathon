      <!-- Social Media & Contact Info -->
      <div class="flex justify-between items-center mt-8">
        <!-- Social Media -->
        <div class="space-y-2">
          <p class="font-semibold">Follow us:</p>
          <div class="flex space-x-4">
            <a href="https://www.facebook.com/FOSSEENMEICT/" target="_blank"><img src="https://img.icons8.com/ios-filled/50/ffffff/facebook--v1.png"  alt="Facebook" class="h-6 bg-[#0866ff] "></a>
